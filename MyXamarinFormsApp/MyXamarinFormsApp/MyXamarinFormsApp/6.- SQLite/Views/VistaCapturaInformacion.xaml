<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyXamarinFormsApp.VistaCapturaInformacion">
    <ScrollView>
        <StackLayout Padding="20" Spacing="30">
            <Label Text="Nombre"/>
            <Entry x:Name="NombreEntry" Placeholder="Nombre completo"/>
            <Label Text="Genero"/>
            <Picker x:Name="PickerGenero" />
            <Button Text="Guardar información" Clicked="btn_guardar"/>
            <Button Text="Ver registros" Clicked="btn_CambiarPagina"/>
            
        </StackLayout>
    </ScrollView>
</ContentPage>