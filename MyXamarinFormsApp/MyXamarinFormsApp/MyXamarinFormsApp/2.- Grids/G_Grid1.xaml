<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyXamarinFormsApp.G_Grid1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Text="Posición [0.0]"  Grid.Row="0" Grid.Column="0" BackgroundColor="Orange"/>
        <Button Text="Posición [0.1]" Grid.Row="0" Grid.Column="1" BackgroundColor="ForestGreen"/>
        <Button Text="Posición [1.0]" Grid.Row="1" Grid.Column="0" BackgroundColor="Blue"/>
        <Button Text="Posición [1.1]" Grid.Row="1" Grid.Column="1" BackgroundColor="Yellow"/>
        <Button Text="Posición [2.0]" Grid.Row="2" Grid.Column="0" BackgroundColor="DarkCyan"/>
        <Button Text="Posición [2.1]" Grid.Row="2" Grid.Column="1" BackgroundColor="LightCyan"/>
        <!--TERCERA COLUMNA PARA LA ÚLTIMA FILA-->
        <Label Text="Posición [2.2]" Grid.Row="2" Grid.Column="2" BackgroundColor="DarkCyan"/>
    </Grid>
</ContentPage>